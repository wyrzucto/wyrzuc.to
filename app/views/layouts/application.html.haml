%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width", :name => "viewport"}/
    %title= A9n.app_name
    = stylesheet_link_tag 'application', media: 'all'
    = favicon_link_tag 'favicon.png'
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    = csrf_meta_tags
  %body{:class => "#{@css_class} sidebarOpen"}
    #map
    #modal
    = javascript_include_tag '//maps.googleapis.com/maps/api/js', '//google-maps-utility-library-v3.googlecode.com/svn-history/r360/trunk/markerclustererplus/src/markerclusterer.js', 'application'
    = yield
