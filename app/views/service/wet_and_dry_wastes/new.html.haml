.box-header.with-border
  %h3.box-title Import odpad√≥w mokrych, suchych oraz zmieszanych
.box-body
  .row
    .col-md-12
      %p.text-center
        = form_tag service_wet_and_dry_wastes_path, multipart: true, class: "form-horizontal" do
          .form-group
            = label_tag :file, 'Plik excel - harmonogram', class: "col-sm-2 control-label"
            .col-sm-10
              = file_field_tag :file, class: "form-control"
          .form-group
            = label_tag :area, t('.area'), class: "col-sm-2 control-label"
            .col-sm-10
              = select_tag :area, options_from_collection_for_select(Location.areas_combo, :to_s, :to_s), class: "form-control"
          .form-group
            .col-sm-offset-2.col-sm-10
              = submit_tag t("buttons.submit"), class: "btn btn-success"
