.box-header.with-border
  .row
    .col-sm-6
      %h3.box-title
        = link_to('Trasy', zut_routes_path)
        &raquo;
        = @route
    .col-sm-6.text-right
      = link_to('Usuń trasę', zut_route_path(@route), method: :delete, confirm: "Czy na pewno usunąć trasę #{@route.name}", class: 'btn btn-danger')
      = link_to 'Dodaj nowy punkt na trasie', new_zut_route_route_container_path(@route), class: 'btn btn-primary'


.box-body.table-responsive.no-padding

  %table.table.table-hover.table-sortable
    %thead
      %tr
        %th Kolejność
        %th Adres
        %th Opis dla kierowców
        %th.action Edycja
        %th.action Usuwanie
    %tbody
      - @route_containers.each_with_index do |container|
        %tr.sortable{ data: { item_id: container.id, position: container.position } }
          %td.sort
            %i.fa.fa-arrows.btn.btn-primary
          %td= container.street
          %td= container.details
          %td.action= link_to 'edytuj', edit_zut_container_path(container), class: 'btn btn-info'
          %td.action= link_to 'usuń', zut_route_route_container_path(@route, container), method: :delete, class: 'btn btn-danger', confirm: "Czy na pewno usunąć punkt #{container.street} z trasy #{@route}"
