.box-header.with-border
  %h3.box-title
    = link_to('Trasy', zut_routes_path)
    &raquo;
    = link_to(@route, zut_route_path(@route))
    &raquo;
    Nowy punkt w rejonie

.box-body
  .row
    .col-md-12
      %p.text-center
        = semantic_form_for([:zut, @route, @route_container], url: zut_route_route_containers_path(@route), html: { class: 'form-horizontal' }) do |f|
          = f.input(:id, as: :select, collection: @containers_list, label: t('formtastic.labels.route_container.address'))

          = f.actions do
            = f.action :submit, label: t(:'formtastic.actions.route_container.create')
